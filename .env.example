# Holo Converter - Environment Configuration
# Copy this file to .env and update the values

# Application Settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
APP_URL=https://holoconverter.example.com
APP_NAME=Holo Converter
APP_VERSION=1.0.0

# API Configuration
API_BASE_URL=https://api.exchangerate.host
API_CACHE_DURATION=300000
API_RATE_LIMIT=100
API_TIMEOUT=10000

# Security
SESSION_SECRET=change_this_to_random_string_32_chars_min
JWT_SECRET=another_random_string_32_chars_min
CORS_ORIGIN=https://holoconverter.example.com

# Feature Flags
ENABLE_AR=true
ENABLE_VR=true
ENABLE_VOICE=true
ENABLE_OFFLINE=true

# Performance
COMPRESSION_LEVEL=6
CACHE_CONTROL_MAX_AGE=31536000

# Development Overrides
# NODE_ENV=development
# CORS_ORIGIN=*
# PORT=3000